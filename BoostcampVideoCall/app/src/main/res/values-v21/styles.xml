<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/mainColor</item>
        <item name="android:navigationBarColor">@color/backToolbar</item>
    </style>

    <style name="myNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/mainColor</item>
        <item name="android:navigationBarColor">@color/backToolbar</item>
    </style>
    <style name="MainNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/mainColor</item>
        <item name="android:navigationBarColor">@color/backToolbar</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>